package main

import (
	"fmt"
	"log"
	"time"

	tgbotapi "github.com/go-telegram-bot-api/telegram-bot-api/v5"
)

// TrialPeriodManager —É–ø—Ä–∞–≤–ª—è–µ—Ç –ø—Ä–æ–±–Ω—ã–º–∏ –ø–µ—Ä–∏–æ–¥–∞–º–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π
type TrialPeriodManager struct{}

// NewTrialPeriodManager —Å–æ–∑–¥–∞–µ—Ç –Ω–æ–≤—ã–π –º–µ–Ω–µ–¥–∂–µ—Ä –ø—Ä–æ–±–Ω—ã—Ö –ø–µ—Ä–∏–æ–¥–æ–≤
func NewTrialPeriodManager() *TrialPeriodManager {
	return &TrialPeriodManager{}
}

// CanUseTrial –ø—Ä–æ–≤–µ—Ä—è–µ—Ç, –º–æ–∂–µ—Ç –ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥
func (tpm *TrialPeriodManager) CanUseTrial(user *User) bool {
	if user == nil {
		return false
	}
	return !user.HasUsedTrial
}

// CreateTrialConfig —Å–æ–∑–¥–∞–µ—Ç –ø—Ä–æ–±–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
func (tpm *TrialPeriodManager) CreateTrialConfig(bot *tgbotapi.BotAPI, user *User, chatID int64) error {
	log.Printf("TRIAL_PERIOD: –°–æ–∑–¥–∞–Ω–∏–µ –ø—Ä–æ–±–Ω–æ–≥–æ –∫–æ–Ω—Ñ–∏–≥–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è TelegramID=%d", user.TelegramID)

	// –ü—Ä–æ–≤–µ—Ä—è–µ–º, –º–æ–∂–µ—Ç –ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥
	if !tpm.CanUseTrial(user) {
		log.Printf("TRIAL_PERIOD: –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å TelegramID=%d —É–∂–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–ª –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥", user.TelegramID)
		return fmt.Errorf("–ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥ —É–∂–µ –±—ã–ª –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω")
	}

	// –†–∞—Å—Å—á–∏—Ç—ã–≤–∞–µ–º –≤—Ä–µ–º—è –∏—Å—Ç–µ—á–µ–Ω–∏—è –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞
	trialExpiryTime := time.Now().AddDate(0, 0, TRIAL_PERIOD_DAYS).UnixMilli()

	// –°–æ–∑–¥–∞–µ–º –∫–æ–Ω—Ñ–∏–≥ —á–µ—Ä–µ–∑ –ø–∞–Ω–µ–ª—å 3x-ui
	sessionCookie, err := Login()
	if err != nil {
		log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏ –≤ –ø–∞–Ω–µ–ª–∏ –¥–ª—è TelegramID=%d: %v", user.TelegramID, err)
		return fmt.Errorf("–æ—à–∏–±–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏ –≤ –ø–∞–Ω–µ–ª–∏: %v", err)
	}

	err = AddClient(sessionCookie, user, TRIAL_PERIOD_DAYS)
	if err != nil {
		log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–æ–Ω—Ñ–∏–≥–∞ –¥–ª—è TelegramID=%d: %v", user.TelegramID, err)
		return fmt.Errorf("–æ—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–æ–Ω—Ñ–∏–≥–∞: %v", err)
	}

	// –û–±–Ω–æ–≤–ª—è–µ–º –¥–∞–Ω–Ω—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è (AddClient —É–∂–µ –æ–±–Ω–æ–≤–∏–ª –æ—Å–Ω–æ–≤–Ω—ã–µ –ø–æ–ª—è)
	user.HasUsedTrial = true
	user.ConfigsCount++

	// –°–æ—Ö—Ä–∞–Ω—è–µ–º –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö
	if err := UpdateUser(user); err != nil {
		log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è TelegramID=%d: %v", user.TelegramID, err)
		return fmt.Errorf("–æ—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö: %v", err)
	}

	log.Printf("TRIAL_PERIOD: –ü—Ä–æ–±–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥ —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω –¥–ª—è TelegramID=%d, SubID=%s", user.TelegramID, user.SubID)

	// –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é
	tpm.sendTrialSuccessMessage(bot, chatID, user, trialExpiryTime)

	return nil
}

// sendTrialSuccessMessage –æ—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—à–Ω–æ–º —Å–æ–∑–¥–∞–Ω–∏–∏ –ø—Ä–æ–±–Ω–æ–≥–æ –∫–æ–Ω—Ñ–∏–≥–∞
func (tpm *TrialPeriodManager) sendTrialSuccessMessage(bot *tgbotapi.BotAPI, chatID int64, user *User, expiryTime int64) {
	expiryDate := time.UnixMilli(expiryTime).Format("02.01.2006")
	
	text := fmt.Sprintf("üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í–∞–º –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥ –Ω–∞ %d –¥–Ω–µ–π!\n\n"+
		"üì± –í–∞—à VPN –∫–æ–Ω—Ñ–∏–≥ –∞–∫—Ç–∏–≤–µ–Ω –¥–æ: %s\n\n"+
		"üîó –î–ª—è –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫—É –Ω–∏–∂–µ:\n"+
		"‚Ä¢ Happ VPN (—Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è)\n"+
		"‚Ä¢ –ò–ª–∏ –ª—é–±–æ–π –¥—Ä—É–≥–æ–π VLESS –∫–ª–∏–µ–Ω—Ç\n\n"+
		"üí° –ü–æ—Å–ª–µ –æ–∫–æ–Ω—á–∞–Ω–∏—è –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞ –≤—ã –º–æ–∂–µ—Ç–µ –ø—Ä–æ–¥–ª–∏—Ç—å –ø–æ–¥–ø–∏—Å–∫—É —á–µ—Ä–µ–∑ –º–µ–Ω—é –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è.",
		TRIAL_PERIOD_DAYS, expiryDate)

	// –°–æ–∑–¥–∞–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É —Å –∫–Ω–æ–ø–∫–æ–π –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è
	subscriptionURL := CONFIG_BASE_URL + user.SubID
	redirectURL := GetRedirectURL() + subscriptionURL

	keyboard := tgbotapi.NewInlineKeyboardMarkup(
		tgbotapi.NewInlineKeyboardRow(
			tgbotapi.NewInlineKeyboardButtonURL("üì± –ü–æ–¥–∫–ª—é—á–∏—Ç—å (Happ)", redirectURL),
		),
		tgbotapi.NewInlineKeyboardRow(
			tgbotapi.NewInlineKeyboardButtonData("üè† –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", "main"),
		),
	)

	msg := tgbotapi.NewMessage(chatID, text)
	msg.ReplyMarkup = keyboard

	if _, err := bot.Send(msg); err != nil {
		log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏—è –æ –ø—Ä–æ–±–Ω–æ–º –ø–µ—Ä–∏–æ–¥–µ –¥–ª—è TelegramID=%d: %v", user.TelegramID, err)
	}
}

// sendTrialAlreadyUsedMessage –æ—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–µ –æ —Ç–æ–º, —á—Ç–æ –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥ —É–∂–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω
func (tpm *TrialPeriodManager) sendTrialAlreadyUsedMessage(bot *tgbotapi.BotAPI, chatID int64) {
	text := "‚ùå –ü—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥ —É–∂–µ –±—ã–ª –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω.\n\n" +
		"üí≥ –î–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è VPN –¥–æ—Å—Ç—É–ø–∞ –ø–æ–ø–æ–ª–Ω–∏—Ç–µ –±–∞–ª–∞–Ω—Å —á–µ—Ä–µ–∑ –º–µ–Ω—é –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è."

	keyboard := tgbotapi.NewInlineKeyboardMarkup(
		tgbotapi.NewInlineKeyboardRow(
			tgbotapi.NewInlineKeyboardButtonData("üí≥ –ü–æ–ø–æ–ª–Ω–∏—Ç—å –±–∞–ª–∞–Ω—Å", "topup"),
		),
		tgbotapi.NewInlineKeyboardRow(
			tgbotapi.NewInlineKeyboardButtonData("üè† –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", "main"),
		),
	)

	msg := tgbotapi.NewMessage(chatID, text)
	msg.ReplyMarkup = keyboard

	if _, err := bot.Send(msg); err != nil {
		log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏—è –æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–Ω–æ–º –ø—Ä–æ–±–Ω–æ–º –ø–µ—Ä–∏–æ–¥–µ: %v", err)
	}
}

// HandleTrialPeriod –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –ª–æ–≥–∏–∫—É –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞ –ø—Ä–∏ –∫–æ–º–∞–Ω–¥–µ /start
func (tpm *TrialPeriodManager) HandleTrialPeriod(bot *tgbotapi.BotAPI, user *User, chatID int64) {
	log.Printf("TRIAL_PERIOD: –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è TelegramID=%d", user.TelegramID)

	// –ï—Å–ª–∏ —É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —É–∂–µ –µ—Å—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥, –Ω–µ –ø—Ä–µ–¥–ª–∞–≥–∞–µ–º –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥
	if user.HasActiveConfig {
		log.Printf("TRIAL_PERIOD: –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å TelegramID=%d —É–∂–µ –∏–º–µ–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã–π –∫–æ–Ω—Ñ–∏–≥", user.TelegramID)
		return
	}

	// –ü—Ä–æ–≤–µ—Ä—è–µ–º, –º–æ–∂–µ—Ç –ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥
	if tpm.CanUseTrial(user) {
		log.Printf("TRIAL_PERIOD: –ü—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–µ –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é TelegramID=%d", user.TelegramID)
		
		text := fmt.Sprintf("üéÅ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –í–∞–º –¥–æ—Å—Ç—É–ø–µ–Ω –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥ –Ω–∞ %d –¥–Ω–µ–π!\n\n"+
			"–•–æ—Ç–∏—Ç–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–±–Ω—ã–π VPN –¥–æ—Å—Ç—É–ø?", TRIAL_PERIOD_DAYS)

		keyboard := tgbotapi.NewInlineKeyboardMarkup(
			tgbotapi.NewInlineKeyboardRow(
				tgbotapi.NewInlineKeyboardButtonData("üéÅ –ê–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥", "activate_trial"),
			),
			tgbotapi.NewInlineKeyboardRow(
				tgbotapi.NewInlineKeyboardButtonData("üí≥ –ü–æ–ø–æ–ª–Ω–∏—Ç—å –±–∞–ª–∞–Ω—Å", "topup"),
			),
		)

		msg := tgbotapi.NewMessage(chatID, text)
		msg.ReplyMarkup = keyboard

		if _, err := bot.Send(msg); err != nil {
			log.Printf("TRIAL_PERIOD: –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è –ø—Ä–æ–±–Ω–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞ –¥–ª—è TelegramID=%d: %v", user.TelegramID, err)
		}
	} else {
		log.Printf("TRIAL_PERIOD: –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å TelegramID=%d —É–∂–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–ª –ø—Ä–æ–±–Ω—ã–π –ø–µ—Ä–∏–æ–¥", user.TelegramID)
		tpm.sendTrialAlreadyUsedMessage(bot, chatID)
	}
}

// GetTrialPeriodInfo –≤–æ–∑–≤—Ä–∞—â–∞–µ—Ç –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø—Ä–æ–±–Ω–æ–º –ø–µ—Ä–∏–æ–¥–µ –¥–ª—è –∞–¥–º–∏–Ω–∞
func (tpm *TrialPeriodManager) GetTrialPeriodInfo() string {
	return fmt.Sprintf("üìä –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –ø—Ä–æ–±–Ω–æ–º –ø–µ—Ä–∏–æ–¥–µ:\n\n"+
		"‚è±Ô∏è –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å: %d –¥–Ω–µ–π\n"+
		"‚öôÔ∏è –ù–∞—Å—Ç—Ä–æ–π–∫–∞: TRIAL_PERIOD_DAYS = %d\n\n"+
		"üí° –î–ª—è –∏–∑–º–µ–Ω–µ–Ω–∏—è –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏ –æ—Ç—Ä–µ–¥–∞–∫—Ç–∏—Ä—É–π—Ç–µ –∫–æ–Ω—Å—Ç–∞–Ω—Ç—É TRIAL_PERIOD_DAYS –≤ config.go",
		TRIAL_PERIOD_DAYS, TRIAL_PERIOD_DAYS)
}
